{% extends "front/base-fo.html.twig" %}
        {% block title %}
           {{ parent() }}- Liste des articles
        {% endblock %}
    
    
        {% block stylesheet %}
            {{ parent() }}
        {% endblock %}

    {% block body %}

    <section class="bg-light">
        <div class="container py-5">
            <div class="row">
                
            {% if articles|length > 0 %}

                {% for article in articles %}
                    {% set name = article.name %}
                        {% set content = article.content %}
            
                
                            <div class="col-12 col-md-4 mb-4">
                    <div class="card h-100">
                        <a href="{{ path('front_article_show_one', {'id': article.id}) }}">
                            <img src="{{asset('fo//assets/img/feature_prod_01.jpg')}}" class="card-img-top" alt="...">
                        </a>
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between">
                                <li>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                </li>
                                <li class="text-muted text-right">$240.00</li>
                                </ul>
                                <a href="{{ path('front_article_show_one', {'id': article.id}) }}" class="h2 text-decoration-none text-dark"> {{ name|striptags|length > 20 ? name|striptags|slice(0, 15) ~ '...' : name|striptags }}</a>
                                <p class="card-text">
                            {{ content|striptags|length > 100 ? content|striptags|slice(0, 100) ~ '...' : content|striptags }}
                            </p>
                            <p class="text-muted">Reviews (24)</p>
                        </div>
                        </div>
                </div>
                
            {% endfor %}
            
        {% else %}
            
            <div class="row text-center py-3">
                <div class="col-lg-6 m-auto">
                    <h1 class="h1">Les Articles </h1>
                    <p>
                        Aucune article trouv√©e.
                    </p>
                </div>
            </div>
            
            
        {% endif %}
        
        </div>
        </div>
    </section>
    {% endblock %}

        {% block javascript %}
        {{ parent() }}
        {% endblock %}

